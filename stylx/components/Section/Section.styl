@import '~@/assets/styles/variables'

/* ----- COLORS ----- */

.section
  overflow: hidden

.section--bg-standard
  background-color: $bg-standard

  &.mode--dark
    background-color: $bg-standard-dm

.mode--dark
  .section--bg-standard
    background-color: $bg-standard-dm

.section--bg-alt
  background-color: $bg-alt

.mode--dark
  .section--bg-alt
    background-color: $bg-alt-dm

.section--bg-brand, .section--bg-hero
  background-color: $bg-brand-highlight

  &.mode--dark
    background-color: $bg-brand-highlight-dm

.mode--dark
  .section--bg-brand, .section--bg-hero
    background-color: $bg-brand-highlight-dm

.section--bg-secondary
  background-color: $bg-secondary-highlight

  &.mode--dark
    background-color: $bg-secondary-highlight-dm

.mode--dark
  .section--bg-secondary
    background-color: $bg-secondary-highlight-dm

// .section--bg-secondary-lowlight
//   background-color: $bg-secondary-lowlight

/* ----- SIZES ----- */

.section 
  position: relative
  padding: 70px 20px

.section--sm
  padding: 40px 20px

  &.top
    padding-top: 100px

  @media only screen and (max-width: 767px)
    padding: 30px 10px

    &.top
      padding-top: 70px

.section--md
  padding: 70px 20px

  &.top
    padding-top: 130px

  @media only screen and (max-width: 767px)
    padding: 50px 10px

    &.top
      padding-top: 110px

.section--lg
  padding: 100px 20px

  &.top
    padding-top: 160px

  @media only screen and (max-width: 767px)
    padding: 70px 10px

    &.top
      padding-top: 130px

.section--flat-bottom
  padding-bottom: 0px

.section--flat-top
  padding-top: 0px

.section--flat
  padding-top: 0px
  padding-bottom: 0px

.section__inner-wrap
  width: 100%
  max-width: 1200px
  margin: 0 auto

/* ----- WAVE ----- */

.section--wave-bottom
  background-image: url('./svg/wave-bottom.svg')
  background-repeat: no-repeat
  background-size: contain
  background-position: left 0px bottom -3px
  padding-bottom: 140px !important

  @media(max-width: 991px)
    padding-bottom: 90px !important

.section--wave-top
  background-image: url('./svg/wave-top.svg')
  background-repeat: no-repeat
  background-size: contain
  background-position: 0px -3px
  padding-top: 120px !important

  @media(max-width: 991px)
    padding-top: 90px !important

.mode--dark
  .section--wave-bottom
    background-image: url('./svg/wave-bottom-dm.svg')

  .section--wave-top
    background-image: url('./svg/wave-top-dm.svg')

/* ----- SWOOSH ----- */

.section--swoosh-bottom
  background-image: url('./svg/swoosh-bottom.svg')
  background-repeat: no-repeat
  background-size: contain
  background-position: left 0px bottom -3px
  padding-bottom: 140px !important

  @media(max-width: 991px)
    padding-bottom: 90px !important

.section--swoosh-top
  background-image: url('./svg/swoosh-top.svg')
  background-repeat: no-repeat
  background-size: contain
  background-position: 0px -3px
  padding-top: 120px !important



  @media(max-width: 991px)
    padding-top: 90px !important

.mode--dark
  .section--swoosh-bottom
    background-image: url('./svg/swoosh-bottom-dm.svg')

  .section--swoosh-top
    background-image: url('./svg/swoosh-top-dm.svg')

