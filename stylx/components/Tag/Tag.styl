@import '~@/assets/styles/variables'

.tag
  position: relative 
  overflow: visible
  line-height: 1.0em
  font-size: 0.8em
  padding: 5px 8px
  font-weight: bold
  border-radius: $size-btn-radius
  border: 2px solid
  color: $white
  display: inline-flex
  justify-content: center
  width: auto
  margin-bottom: 1px

  &:hover
    .tag-label
      display: flex

.tag--standard
  border-color: $btn-light
  background-color: $btn-light

.tag--secondary
  border-color: $btn-secondary-light
  background-color: $btn-secondary-light

.tag--hollow
  color: $med-grey
  border: 2px solid $med-grey
  background-color: transparent

.mode--dark
  .tag--hollow
    color: $white
    border: 2px solid $white
    background-color: transparent

.tag-label
  position: absolute
  font-weight: 400
  line-height: 1.1em
  width: 100%
  min-width: 160px
  text-align: center
  bottom: 26px
  padding: 5px 8px
  border-radius: 6px
  display: none
  justify-content: center
  font-size: 14px
  background-color: $white
  color: $copy
  box-shadow: 0px 0px 4px rgba(0,0,0,0.2)

  &::after
    content: ''
    width: 0
    height: 0
    border-left: 6px solid transparent
    border-right: 6px solid transparent
    border-top: 6px solid $white
    position: absolute 
    bottom: -6px

dump_media_cache()