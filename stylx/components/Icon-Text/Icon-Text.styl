@import '~@/assets/styles/variables'

.text-icon__wrap
  display: flex
  flex-direction: row

.text-icon__wrap--center
  flex-direction: column

.text-icon__wrap--lg
  @media(max-width: 767px)
    flex-direction: column

  .text__wrap--standard, .text__wrap--left, .text__wrap--right, .text__wrap--center
    @media(max-width: 767px)
      text-align: center

  .icon__wrap--standard, .icon__wrap--left, .icon__wrap--right, .icon__wrap--center
    @media(max-width: 767px)
      margin-left: auto 
      margin-right: auto
      text-align: center

  .icon__wrap--center
    margin-bottom: 14px

.icon__wrap
  margin-bottom: 10px 

  @media(max-width: 767px)
    margin-bottom: 5px

.icon__wrap--standard, .icon__wrap--left
  margin-right: 14px
  margin-left: 0
  order: 1

.icon__wrap--right
  margin-left: 14px
  margin-right: 0
  order: 2

.icon__wrap--center
  margin-bottom: 4px
  margin-left: auto
  margin-right: auto
  text-align: center

  &.center-padding
    padding-left: 14px

.text__wrap--standard, .text__wrap--left
  text-align: left
  order: 2

.text__wrap--right
  text-align: right
  order: 1

.text__wrap--center
  text-align: center

dump_media_cache()