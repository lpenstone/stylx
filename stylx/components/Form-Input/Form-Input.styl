@import '~@/assets/styles/variables'

.error__wrap
  display: none
  border-bottom: 2px solid $error
  color: $error
  margin-bottom: 30px
  font-size: 0.9em

  p:last-of-type
    margin-bottom: 0

.form--errors
  .error__wrap
    display: block

  .input__label--error
    color: $error

.input__wrap
  margin-bottom: 10px

.input__label
  display: inline-block
  width: 100%
  font-size: 0.9em
  font-weight: bold

.input__item
  color: $copy
  font-family: $font-copy
  background-color: transparent
  width: 100%
  border: 1px solid $form-border
  border-radius: 3px

  &:focus
    border: 2px solid $form-border-focus
    outline: none

  &.input__item--sm
    padding: 6px
    font-size: 0.9em

    &:focus
      padding: 5px

  &.input__item--md
    padding: 10px
    font-size: 1.0em

    &:focus
      padding: 9px

  &.input__item--lg
    padding: 14px
    font-size: 1.2em

    &:focus
      padding: 13px

.mode--dark
  .input__item
    border-color: $form-border-dm
    color: $copy-dm

    &:focus
      border-color: $form-border-focus-dm


dump_media_cache()