@import '~@/assets/styles/variables'

.card
  position: relative
  background-color: $card
  border-radius: $size-radius

.card--shadow
  background-color: $card-standard
  box-shadow: 0px 0px 8px rgba(0,0,0,0.2)

.card--phone, .card--phone-shadow
  border: 4px solid darken($med-grey, 20%)
  border-radius: 25px
  overflow: hidden
  max-width: 270px

  .card__content
    height: 400px
    overflow: hidden

  .card__phone-bar, .card__phone-footer
    width: 100%
    height: 50px
    background-color: darken($med-grey, 20%)
    display: flex
    align-items: center
    justify-content: center
    padding: 0 10px

  .phone__speaker
    width: 50px
    height: 5px
    border-radius: 10px
    background-color: white
    opacity: 0.5

  .phone__btn
    width: 38px
    height: 38px
    border: 3px solid white
    border-radius: 50%
    opacity: 0.5

  &.card--sm
    .card__content
      padding: 0

  &.card--md
    .card__content
      padding: 15px 10px

  &.card--lg
    .card__content
      padding: 20px 15px

@media(max-width: 767px)
  .card--phone, .card--phone-shadow
    .card--md, .card--lg
      .card__content
        padding: 15px 10px


.card--browser-shadow, .card--phone-shadow
  box-shadow: 0px 0px 8px rgba(0,0,0,0.4)

.card--browser, .card--browser-shadow
  border: 2px solid darken($med-grey, 20%)
  overflow: hidden

  &.card--sm
    .card__content
      padding: 0

  .card__browser-bar
    width: 100%
    height: 40px
    background-color: darken($med-grey, 20%)
    display: flex
    align-items: center
    padding: 0 10px

    .browser__circle
      position: relative
      margin: 0 7px
      border-radius: 50%
      width: 12px
      height: 12px

    .browser__circle--red
      background-color: #f25753
      border: 2px solid lighten(#f25753, 20%)

    .browser__circle--yellow
      background-color: #f6b538
      border: 2px solid lighten(#f6b538, 20%)

    .browser__circle--green
      background-color: #40bf53
      border: 2px solid lighten(#40bf53, 20%)

.mode--dark
  .card
    background-color: $card-dm

  .card--shadow
    background-color: $card-standard-dm
    box-shadow: 0px 0px 8px rgba(0,0,0,0.8)

.card--sm
  .card__content
    padding: 20px 15px

.card--md
  .card__content
    padding: 30px

.card--lg
  .card__content
    padding: 40px 60px

@media(max-width: 767px)
  .card--sm, .card--md, .card--lg
    .card__content
      padding: 20px 15px

dump_media_cache()