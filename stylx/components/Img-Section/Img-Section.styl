@import '~@/assets/styles/variables'

.background
  width: 0
  height: 0
  overflow: hidden
  opacity: 0

.section
  position: relative
  background-repeat: no-repeat
  background-size: cover
  background-position: center

  &.section--fixed
    background-attachment: fixed

.section__screen
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0
  background-color: rgba(0,0,0, 0.3)
  z-index: 0

.section__inner
  position: relative
  z-index: 1

/* ----- SIZES ----- */

.section 
  position: relative
  padding: 70px 20px

.section--sm
  padding: 40px 20px

  @media only screen and (max-width: 767px)
    padding: 30px 10px

.section--md
  padding: 70px 20px

  @media only screen and (max-width: 767px)
    padding: 50px 10px

.section--lg
  padding: 100px 20px

  @media only screen and (max-width: 767px)
    padding: 70px 10px

.section--flat-bottom
  padding-bottom: 0px

.section--flat-top
  padding-top: 0px

.section--flat
  padding-top: 0px
  padding-bottom: 0px

.section__inner-wrap
  width: 100%
  max-width: 1200px
  margin: 0 auto

